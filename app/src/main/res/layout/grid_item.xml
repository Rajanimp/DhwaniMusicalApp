<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            >

            <ImageView
                android:id="@+id/img_artist_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/shivkumar_thumbnail"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_artist_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kishori"
                android:gravity="start|center_vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"
                android:paddingStart="@dimen/card_elevation"
                android:paddingEnd="@dimen/card_elevation"
                android:minLines="2"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>