<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dhwanimusicalapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/dhwani_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dhwani_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ArtistsActivity"
            android:label="@string/artists"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.AlbumsActivity"
            android:label="@string/albums"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.TracksActivity"
            android:label="@string/tracks"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainActivity"
            />
        <activity
            android:name=".activities.NowPlayingActivity"
            android:label="@string/now_playing"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.TracksActivity"
            />
    </application>

</manifest>